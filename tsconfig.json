{
  "compilerOptions": {
    "target": "es2018",
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDirs": [
      "./src"
    ],
    "outDir": "./built",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "mocha",
      "node"
    ],
    "lib": [
      "es2018",
      "es2018.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "built"
  ]
}
